<Styles xmlns='https://github.com/avaloniaui'
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'>
    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem">
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem:pointerover Border#BottomLine">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ListBoxItemPointeroverBrush}" />
    </Style>
    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource LightDefaultOpacity4}" />
    </Style>
    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ListBoxItemSelectedBrush}" />
    </Style>
    <Style Selector="ListBox.SelectCurrencyListBox ListBoxItem:selected Border#BottomLine">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    
    
    <Style Selector="ListBox.ManageAssets ListBoxItem">
        <Setter Property="Cursor" Value="Arrow" />
    </Style>
    <Style Selector="ListBox.ManageAssets Grid[IsEnabled=False]">
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    <Style Selector="ListBox.ManageAssets ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource AlmostTransparentBrush}" />
    </Style>
    <Style Selector="ListBox.ManageAssets ListBoxItem:pointerover:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ListBoxItemPointeroverBrush}" />
    </Style>
    <Style Selector="ListBox.ManageAssets ListBoxItem Border#BottomLine">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ListBox.ManageAssets ListBoxItem:selected Border#BottomLine">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="ListBox.ManageAssets TextBlock.IsHidden">
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    <Style Selector="ListBox.ManageAssets TextBlock.IsSelected">
        <Setter Property="Foreground" Value="{DynamicResource DefaultForegroundBrush}" />
    </Style>
    <Style Selector="ListBox.ManageAssets TextBlock.NotSelected">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}" />
    </Style>
</Styles>