<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dappsViewModels="clr-namespace:Atomex.Client.Desktop.ViewModels.DappsViewModels"
             xmlns:controls="clr-namespace:Atomex.Client.Desktop.Controls"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="750"
             x:Class="Atomex.Client.Desktop.Views.DappsViews.OperationRequestView"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             xmlns:services="clr-namespace:Atomex.Client.Desktop.Services"
             xmlns:converters="clr-namespace:Atomex.Client.Desktop.Converters"
             xmlns:atomex="clr-namespace:Atomex;assembly=Atomex.Client.Core"
             Width="700">
    <Design.DataContext>
        <dappsViewModels:OperationRequestViewModel />
    </Design.DataContext>

    <Border Classes="ChildViewBorder"
            Padding="0 0 0 60">
        <StackPanel>
            <Grid RowDefinitions="72,Auto">
                <TextBlock Grid.Row="0"
                           Foreground="{DynamicResource DefaultForegroundBrush}"
                           FontSize="22"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="Operation Request" />
                <Border Grid.Row="1"
                        Height="1"
                        Background="{DynamicResource LightDefaultOpacity10}" />
            </Grid>

            <Grid ColumnDefinitions="130,*,130">
                <StackPanel Grid.Column="1"
                            Margin="0 32 0 0">
                    <Grid ColumnDefinitions="*,Auto,*">
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal">
                            <Border Width="40"
                                    Height="40"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    ClipToBounds="True"
                                    CornerRadius="20"
                                    Classes.IsImageLoading="{Binding #DappPreviewImg.IsLoading}"
                                    Classes.ImageNotLoaded="{Binding #DappPreviewImg.CurrentImage,
                                            Converter={x:Static ObjectConverters.IsNull}}">
                                <asyncImageLoader:AdvancedImage Name="DappPreviewImg"
                                                                StretchDirection="Both"
                                                                Stretch="UniformToFill"
                                                                Source="{Binding DappLogo}"
                                                                Loader="{x:Static services:FileCacheImageLoader.Instance}" />
                            </Border>

                            <TextBlock Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="12 0"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Text="• • •" />
                            <svg:Svg Width="39"
                                     Path="/Resources/Icons/atomex-logo-round-white.svg" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Foreground="{DynamicResource DefaultForegroundBrush}"
                               Margin="0 16 0 0"
                               FontSize="16"
                               LineHeight="24"
                               HorizontalAlignment="Center"
                               Text="{Binding SubTitle}" />

                    <Border Height="1"
                            Margin="0 24"
                            Background="{DynamicResource LightDefaultOpacity10}" />

                    <ListBox Background="Transparent"
                             Items="{Binding Operations}"
                             HorizontalAlignment="Stretch"
                             MaxHeight="300"
                             VerticalAlignment="Stretch">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                            <Style Selector="ListBoxItem:not(:pointerover) /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="{x:Type dappsViewModels:TransactionContentViewModel}">
                                <Grid ColumnDefinitions="*,Auto"
                                      RowDefinitions="Auto,28,28,28,28,28,28"
                                      Margin="0 13 0 0">
                                    
                                    
                                    <TextBlock Grid.Column="0"
                                               Grid.Row="0"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               HorizontalAlignment="Left"
                                               Text="From address" />
                                    <StackPanel Grid.Column="1"
                                                Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                        <svg:Svg HorizontalAlignment="Center"
                                                 Width="18"
                                                 Height="18"
                                                 Path="/Resources/Icons/tezos-disabled.svg" />
                                        <TextBlock Margin="6 0 0 0"
                                                   Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Source,
                                                   Converter={x:Static converters:StringConverters.ToShortenedAddress}}" />

                                        <controls:CopyButton ToolText="Copy from address"
                                                             DoneToolText="Copied!"
                                                             Margin="6 0 0 0"
                                                             Command="{Binding $parent[ListBox].DataContext.CopyCommand}"
                                                             CommandParameter="{Binding Source}" />
                                    </StackPanel>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="1"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               HorizontalAlignment="Left"
                                               Text="To address" />
                                    <StackPanel Grid.Column="1"
                                                Grid.Row="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                        <svg:Svg HorizontalAlignment="Center"
                                                 Width="18"
                                                 Height="18"
                                                 Path="/Resources/Icons/tezos-disabled.svg" />
                                        <TextBlock Margin="6 0 0 0"
                                                   Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Destination,
                                       Converter={x:Static converters:StringConverters.ToShortenedAddress}}" />

                                        <controls:CopyButton ToolText="Copy to address"
                                                             DoneToolText="Copied!"
                                                             Margin="6 0 0 0"
                                                             Command="{Binding $parent[ListBox].DataContext.CopyCommand}"
                                                             CommandParameter="{Binding Destination}" />
                                    </StackPanel>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="2"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               HorizontalAlignment="Left"
                                               Text="Amount" />

                                    <StackPanel Grid.Column="1"
                                                Grid.Row="2"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                        <TextBlock Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Text="{Binding Amount}" />
                                        <TextBlock Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="4 0 0 0"
                                                   HorizontalAlignment="Right"
                                                   Text="{x:Static atomex:TezosConfig.Xtz}" />
                                        <TextBlock Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="4 0"
                                                   HorizontalAlignment="Right"
                                                   Text="/" />
                                        <TextBlock HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   Margin="0 2 0 0">
                                            <TextBlock.Text>
                                                <MultiBinding
                                                    Converter="{StaticResource AmountToStringConverter}">
                                                    <Binding Path="AmountInBase" Mode="OneWay" />
                                                    <Binding Path="BaseCurrencyFormat" Mode="OneWay" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="3"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               HorizontalAlignment="Left"
                                               Text="Fee" />

                                    <StackPanel Grid.Column="1"
                                                Grid.Row="3"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">
                                        <TextBlock Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Text="{Binding Transaction.Fee}" />
                                        <TextBlock Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="4 0 0 0"
                                                   HorizontalAlignment="Right"
                                                   Text="{x:Static atomex:TezosConfig.Xtz}" />
                                        <TextBlock Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="4 0"
                                                   HorizontalAlignment="Right"
                                                   Text="/" />
                                        <TextBlock HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource DefaultForegroundBrush}"
                                                   FontSize="16"
                                                   Margin="0 2 0 0">
                                            <TextBlock.Text>
                                                <MultiBinding
                                                    Converter="{StaticResource AmountToStringConverter}">
                                                    <Binding Path="FeeInBase" Mode="OneWay" />
                                                    <Binding Path="BaseCurrencyFormat" Mode="OneWay" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="4"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               LineHeight="24"
                                               HorizontalAlignment="Left"
                                               Text="Gas limit" />

                                    <TextBlock Grid.Column="1"
                                               Grid.Row="4"
                                               Foreground="{DynamicResource DefaultForegroundBrush}"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Text="{Binding Transaction.GasLimit}" />

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="5"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               FontSize="16"
                                               HorizontalAlignment="Left"
                                               Text="Storage limit" />

                                    <TextBlock Grid.Column="1"
                                               Grid.Row="5"
                                               Foreground="{DynamicResource DefaultForegroundBrush}"
                                               FontSize="16"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Text="{Binding Transaction.StorageLimit}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- -->
                    <!-- <TextBox Margin="0 16 0 0"  -->
                    <!--     Padding="16 10 16 0" -->
                    <!--          Text="{Binding Operations}" -->
                    <!--          VerticalContentAlignment="Top" -->
                    <!--          Classes="AtomexTextBox" -->
                    <!--          FontSize="16" -->
                    <!--          TextWrapping="Wrap" -->
                    <!--          BorderThickness="0" -->
                    <!--          Height="176" /> -->

                    <Grid ColumnDefinitions="*,16,*"
                          Margin="0 16 0 0">
                        <controls:RoundedButton Grid.Column="0"
                                                Classes="GrayButton"
                                                Content="Reject"
                                                Command="{Binding OnRejectCommand}"
                                                Classes.Loading="{Binding IsRejecting}" />
                        <controls:RoundedButton Grid.Column="2"
                                                Content="Confirm"
                                                Command="{Binding OnConfirmCommand}"
                                                Classes.Loading="{Binding IsSending}" />
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>