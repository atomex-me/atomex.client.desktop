<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Atomex.Client.Desktop.Views.CreateWalletViews.CreateDerivedKeyPasswordView"
             xmlns:controls="clr-namespace:Atomex.Client.Desktop.Controls"
             xmlns:vm="clr-namespace:Atomex.Client.Desktop.ViewModels.CreateWalletViewModels"
             xmlns:helpers="clr-namespace:Atomex.Client.Desktop.Helpers">

    <Design.DataContext>
        <vm:CreateDerivedKeyPasswordViewModel />
    </Design.DataContext>

    <StackPanel>

        <ContentControl Content="{Binding PassVM1}" />
        <ContentControl Content="{Binding PassVM2}" />

        <CheckBox IsChecked="{Binding PasswordsEqual}" />

        <controls:PasswordStrengthMeter Classes="PasswordStrengthMeter"
                                        Height="20"
                                        Width="480"
                                        Margin="0 5 0 5"
                                        CornerRadius="10"
                                        PasswordScore="5" />

    </StackPanel>

</UserControl>