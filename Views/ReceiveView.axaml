<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Atomex.Client.Desktop.Views.ReceiveViews.ReceiveView"
             xmlns:vm="clr-namespace:Atomex.Client.Desktop.ViewModels.ReceiveViewModels"
             xmlns:controls="clr-namespace:Atomex.Client.Desktop.Controls"
             xmlns:converters="clr-namespace:Atomex.Client.Desktop.Converters"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:helpers="clr-namespace:Atomex.Client.Desktop.Helpers"
             Width="700">

    <Design.DataContext>
        <vm:ReceiveViewModel />
    </Design.DataContext>

    <Border Classes="ChildViewBorder"
            Padding="24 0 24 0"
            Width="700">
        <StackPanel Orientation="Vertical">
            <Grid ColumnDefinitions="Auto,*"
                  RowDefinitions="Auto"
                  Margin="0 20 0 20">

                <TextBlock Grid.Column="1"
                           Foreground="{DynamicResource ChildViewHeaderForegroundBrush}"
                           FontFamily="{DynamicResource DefaultLightFontFamily}"
                           FontSize="22"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="{Binding TitleText}"
                           Name="WindowTitle" />
            </Grid>

            <Border Height="1"
                    Margin="-24 0 -24 0"
                    Background="{DynamicResource LightDefaultOpacity10}" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 30 0 0">
                <Image Width="150"
                       Source="{Binding QrCode}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 16 0 3">
                <TextBlock Text="{Binding SelectedAddress}"
                           FontFamily="{DynamicResource DefaultFontFamily}"
                           FontSize="16"
                           LineHeight="24"
                           Foreground="{DynamicResource DefaultForegroundBrush}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Border Background="{DynamicResource RoundedButtonDisabledForegroundBrush}"
                        CornerRadius="4"
                        VerticalAlignment="Center"
                        Padding="6 0"
                        Height="20"
                        IsVisible="{Binding AddressIsFree}">
                    <TextBlock Text="new"
                               FontSize="12"
                               LineHeight="16"
                               VerticalAlignment="Center"
                               FontFamily="{DynamicResource DefaultFontFamily}"
                               Foreground="{DynamicResource DefaultForegroundBrush}" />
                </Border>
                <TextBlock IsVisible="{Binding !AddressIsFree}"
                           FontFamily="{DynamicResource DefaultFontFamily}"
                           FontSize="16"
                           LineHeight="24"
                           Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <TextBlock.Text>
                        <MultiBinding Converter="{StaticResource AmountToStringConverter}">
                            <Binding Path="AddressBalance" Mode="OneWay" />
                            <Binding Path="Currency.Format" Mode="OneWay" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Margin="3 0 0 0"
                           IsVisible="{Binding !AddressIsFree}"
                           Text="{Binding Currency.Name}"
                           FontFamily="{DynamicResource DefaultFontFamily}"
                           FontSize="16"
                           Foreground="{DynamicResource SecondaryForegroundBrush}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 16 0 0">
                <StackPanel.Styles>
                    <Style Selector="controls|RoundedButton.NotCopied">
                        <Setter Property="Background" Value="{DynamicResource RoundedButtonBackgroundBrush}" />
                    </Style>
                    <Style Selector="controls|RoundedButton.Copied">
                        <Setter Property="Background" Value="{DynamicResource Emerald}" />
                    </Style>
                </StackPanel.Styles>

                <controls:RoundedButton Height="46"
                                        Padding="26 0"
                                        CornerRadius="6"
                                        FontFamily="{DynamicResource DefaultFontFamily}"
                                        FontWeight="Normal"
                                        Command="{Binding CopyCommand}"
                                        IsEnabled="{Binding !IsCopied}"
                                        Classes.Copied="{Binding IsCopied}"
                                        Classes.NotCopied="{Binding !IsCopied}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    IsVisible="{Binding !IsCopied}">
                            <svg:Svg HorizontalAlignment="Center"
                                     Width="24"
                                     Height="24"
                                     Path="/Resources/Icons/copy-white.svg" />
                            <TextBlock Margin="8 0 0 0"
                                       Text="Copy address"
                                       FontFamily="{DynamicResource DefaultFontFamily}"
                                       FontWeight="Light"
                                       FontSize="18"
                                       Foreground="{DynamicResource RoundedButtonForegroundBrush}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    IsVisible="{Binding IsCopied}">
                            <svg:Svg HorizontalAlignment="Center"
                                     Width="24"
                                     Height="24"
                                     Path="/Resources/Icons/check-darkblue.svg" />
                            <TextBlock Margin="8 0 0 0"
                                       Text="Copied"
                                       FontFamily="{DynamicResource DefaultFontFamily}"
                                       FontWeight="Light"
                                       FontSize="18"
                                       Foreground="{DynamicResource DeepBlue}" />
                        </StackPanel>
                    </StackPanel>
                </controls:RoundedButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 44 0 40">
                <Button Classes="LinkButton Underlined"
                        Foreground="{DynamicResource SecondaryForegroundBrush}"
                        Command="{Binding SelectAddressCommand}"
                        Content="Choose from my addresses" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>