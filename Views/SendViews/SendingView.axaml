<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700"
             x:Class="Atomex.Client.Desktop.Views.SendViews.SendingView"
             xmlns:mah="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing">

    <Border Classes="ChildViewBorder"
            Padding="24 20 24 16"
            Width="700">

        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="22"
                       FontWeight="400"
                       HorizontalAlignment="Center"
                       FontFamily="{DynamicResource DefaultFontFamily}"
                       Foreground="{DynamicResource DefaultForegroundBrush}">
                Sending, please wait
            </TextBlock>

            <Border Margin="-24 16 -24 0"
                    Height="1"
                    Background="{DynamicResource LightDefaultOpacity10}" />

            <Border Height="180">
                <mah:ProgressRing Width="50"
                                  Height="50"
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource DefaultProgressRingBrush}" />
            </Border>
        </StackPanel>
    </Border>
</UserControl>