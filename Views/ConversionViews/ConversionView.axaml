                  VerticalAlignment="Center"
                  Width="12"
                  Height="12"
                  Data="{DynamicResource Help}"
                  Fill="{DynamicResource LightDefaultOpacity20}"/>
          </Button>
        </StackPanel>-->

                <!-- is redeem from address with max balance note -->
                <!--<StackPanel Orientation="Horizontal"
                    IsVisible="{Binding IsRedeemFromAddressWithMaxBalance}">
          <TextBlock Text="{Binding RedeemFromAddressNote}"
                     MaxWidth="471"
                     Padding="0 2 0 2"
                     TextWrapping="Wrap"
                     VerticalAlignment="Center"
                     FontSize="13"
                     FontFamily="{DynamicResource DefaultLightFontFamily}"
                     Classes="Message"/>
